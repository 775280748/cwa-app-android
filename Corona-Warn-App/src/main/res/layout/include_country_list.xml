<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="interopViewModel"
            type="de.rki.coronawarnapp.ui.viewmodel.InteroperabilityViewModel" />

        <variable
            name="headerDescription"
            type="String" />

        <variable
            name="footerTitle"
            type="String" />

        <variable
            name="footerDescription"
            type="String" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/country_header_description"
                style="@style/headline6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:accessibilityHeading="true"
                android:text="@{headerDescription}"
                app:layout_constraintBottom_toTopOf="@+id/all_country_container"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/all_country_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/country_header_description">

                <TextView
                    android:id="@+id/label_all_country"
                    style="@style/headline6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{@string/country_name_all}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></TextView>

                <Switch
                    android:id="@+id/all_country_switch"
                    style="@style/switchBase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="@{interopViewModel.isAllCountriesSelected}"
                    app:layout_constraintBottom_toBottomOf="@+id/label_all_country"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/label_all_country"></Switch>

                <include
                    android:id="@+id/all_country_divider"
                    layout="@layout/include_divider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_divider"
                    android:layout_marginTop="@dimen/bullet_point_baseline_offset"
                    app:layout_constraintTop_toBottomOf="@id/label_all_country" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/bullet_point_baseline_offset"
                    android:text="@{@string/eu_wide_risk_detection_higher_data_usage_hint}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/all_country_divider" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <de.rki.coronawarnapp.ui.view.CountrySelectionList
                android:id="@+id/countryList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/all_country_container"
                app:selectedCountries="@{interopViewModel.selectedCountryCodes}" />

            <TextView
                android:id="@+id/label_country_selection_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_normal"
                android:text="@{@string/eu_wide_risk_detection_country_info}"
                app:layout_constraintTop_toBottomOf="@+id/countryList"></TextView>

            <androidx.constraintlayout.widget.ConstraintLayout
                style="@style/cardTracing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label_country_selection_info">

                <TextView
                    android:id="@+id/country_footer_title"
                    style="@style/headline6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_normal"
                    android:accessibilityHeading="true"
                    android:text="@{footerTitle}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/country_footer_description"
                    style="@style/body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_normal"
                    android:accessibilityHeading="true"
                    android:text="@{footerDescription}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/country_footer_title" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>